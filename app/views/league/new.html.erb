<div class="container">
<%= @league.errors.full_messages.each do |message| %>
  <div class="alert alert-warning" role="alert"><%= message %></div>
<% end %>
<%= form_for @league do |f| %>

<div class="form-inline">
    <div class="form-group">
        <%= f.label :leaguename, "League Name" %>
        <%= f.text_field :leaguename, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :playerhost %>
        <%= f.text_field :playerhost, class: "form-control" %>
    </div>
</div>


<%= f.submit "Create League" %>

<% end %>




</div>
<%= link_to "List Leagues", listleagues_path %>
